            <item type='icon'>
                <position value='north-west'/>
                <h_offset value='4'/>
                <v_offset value='4'/>
                <icon type='file' size='little'/>
            </item>
            <item type='text'>
                <position value='north-west'/>
                <h_offset value='42'/>
                <v_offset value='4'/>
                <text format='%R' font='Sans Bold 12' color='#ffffffffffff' clipping='ellipsis-middle' width='0'/>
