<?xml version='1.0' encoding='UTF-8' ?>

<guifications>
    <theme api='1'>
        <info>
            <name>Dark and Small</name>
            <version>1.0</version>
            <summary>Dark and Small Theme</summary>
            <description>Black background with light text.</description>
            <author>Kyle Wayman &lt;kwayman@gmail.com&gt;</author>
            <website>http://guifications.sourceforge.net</website>
        </info>
        <options>
            <date_format>%x</date_format>
            <time_format>%X</time_format>
            <warning>N/A</warning>
            <ellipsis>...</ellipsis>
        </options>
